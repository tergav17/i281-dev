00/00:          ; BIOS.S
01/00:          ; STANDARD BIOS FOR COMPACT FLASH BOOT
01/00:          ; PLUS STANDARD CALLS
01/00:          
01/00:          ; DEFINES
01/00:          DBANK	=	0X80	; DATA BANK ADDRESS 
01/00:          CF	=	0XA0	; COMPACT FLASH BASE ADDRESS
01/00:          CF_DATA	=	CF+0X00	; CF DATA
01/00:          CF_ERR	=	CF+0X01	; CF ERROR
01/00:          CF_FEAT	=	CF+0x01	; CF FEATURES
01/00:          CF_CNT	=	CF+0X02	; CF SECTOR COUNT
01/00:          CF_LBA0	=	CF+0X03	; CF LBA BITS 0-7
01/00:          CF_LBA1	=	CF+0X04	; CF LBA BITS 8-15
01/00:          CF_LBA2	=	CF+0X05	; CF LBA BITS 16-23
01/00:          CF_LBA3	=	CF+0X06	; CF LBA BITS 24-27
01/00:          CF_STAT	=	CF+0X07	; CF STATUS
01/00:          CF_CMD	=	CF+0X07	; CF COMMAND
01/00:          
01/00:          CF_8BIT	=	0X01	; 8 BIT MODE
01/00:          CF_DCAC	=	0X82	; DISABLE CACHE
01/00:          
01/00:          CF_READ	=	0X20	; READ COMMAND
01/00:          CF_SETF	=	0X20	; SET FEATURE COMMAND
01/00:          
01/00:          .BANK 0
00/00:          .TEXT
00/00:          
00/00:          	; SYSTEM CALL JUMP TABLE
00/00: FF01     	JUMP	BOOT	; BOOT OPERATION
00/01: FF30     	JUMP	PRGM	; PROGRAM FROM DMEM
00/03:          	
00/02:          
00/02:          
00/02:          	; KICK OFF THE BOOT SEQUENCE
00/02:          	; START BY SETTING THE CARD TO 8-BIT MODE
00/02:          	; WE MUST WAIT FOR THE CF TO BE READY BEFORE SENDING A COMMAND
00/02: 3804     BOOT:	LOADI	C,@+2
00/03: FF19     	JUMP	CFWAIT
00/04: 3001     	LOADI	A,CF_8BIT
00/05: A0A1     	STORE	[CF_FEAT],A
00/06: 3020     	LOADI	A,CF_SETF
00/07: A0A7     	STORE	[CF_CMD],A
00/09:          	
00/08:          	; NOW DISABLE THE CACHE
00/08: 380A     	LOADI	C,@+2
00/09: FF13     	JUMP	CFWAIT
00/0A: 3082     	LOADI	A,CF_DCAC
00/0B: A0A1     	STORE	[CF_FEAT],A
00/0C: 3020     	LOADI	A,CF_SETF
00/0D: A0A7     	STORE	[CF_CMD],A
00/0F:          	
00/0E:          	; PUNCH IN THE ADDRESS OF THE MBR
00/0E:          	; (MASTER BOOT RECORD)
00/0E: 3400     	LOADI	B,0
00/0F: A4A3     	STORE	[CF_LBA0],B
00/10: A4A4     	STORE	[CF_LBA1],B
00/11: A4A5     	STORE	[CF_LBA2],B
00/13:          	
00/12:          	; THE TOP 3 BITS OF LBA3 MUST BE '1' TO INDICATE LBA MODE
00/12: 30E0     	LOADI	A,0XE0
00/13: A0A6     	STORE	[CF_LBA3],A
00/15:          	
00/14:          	; PUT A '1' IN THE SECTOR COUNT REGISTER
00/14: 3001     	LOADI	A,0X01
00/15: A0A2     	STORE	[CF_CNT],A
00/17:          	
00/16:          	; SINCE A = 1, LETS SET THE DESTINATION BANKS TOO
00/16: 0000     	BANK	A
00/17: A080     	STORE	[DBANK],A
00/19:          	
00/18:          	; ISSUE A READ COMMAND!
00/18: 381A     	LOADI	C,@+2
00/19: FF03     	JUMP	CFWAIT
00/1A: 3020     	LOADI	A,CF_READ
00/1B: A0A7     	STORE	[CF_CMD],A
00/1D:          	
00/1C:          	; ...AND WAIT FOR IT TO FINISH
00/1C: 3823     	LOADI	C,CFBOOT
00/1E:          
00/1D:          	; WAIT FOR THE CF CARD TO BECOME READY
00/1D:          	; FOR THIS TO HAPPEN, THE BUSY FLAG MUST BE 0
00/1D:          	; AND THE READY FLAG MUST BE 1
00/1D:          	; IF A CF CARD ISN'T PRESENT, THIS ROUTINE HANGS
00/1D:          	; BUT WE DON'T CARE
00/1D:          	; USES: A
00/1D: 80A7     CFWAIT:	LOAD	A,[CF_STAT]
00/1F:          
00/1E:          	; CHECK BIT 7 (BUSY FLAG)
00/1E: 4000     	SHIFTL	A
00/20:          	
00/1F:          	; GO BACK TO START BUSY
00/1F: F0FD     	BRC	CFWAIT
00/21:          	
00/20:          	; CHECK BIT 6 (READY FLAG)
00/20: 4000     	SHIFTL	A
00/22:          	
00/21:          	; GO BACK TO START IF NOT READY
00/21: F1FB     	BRNC	CFWAIT
00/23:          	
00/22:          	; RETURN FROM FUNCTION CALL
00/22: FEDD     	JUMPR	C
00/24:          	
00/23:          	; NOW THE CARD SHOULD BE READY TO SEND BYTES
00/23:          	; WE ARE JUST GOING TO GO OUT ON A LIMB AND
00/23:          	; ASSUME THAT WHATEVER MASTER BOOT RECORD
00/23:          	; WE HAVE BEEN GIVEN IS VALID
00/23:          	; NO USE IN WASTING PRECIOUS INSTRUCTION MEMORY HERE
00/23:          	; SKIP THE FIRST 128 BYTES OF MEMORY
00/23:          	; B SHOULD STILL BE 0 FROM LOADING THE MBR ADDRESS
00/23: 80A0     CFBOOT:	LOAD	A,[CF_DATA]
00/24: 5401     	ADDI	B,1
00/25: F4FD     	BRN	CFBOOT
00/27:          	
00/26:          	; NOW WE UNPACK THE DATA SEGMENT
00/26: 3400     	LOADI	B,0
00/27: 80A0     0:	LOAD	A,[CF_DATA]
00/28: B100     	STOREF	[B],A
00/29: 5401     	ADDI	B,1
00/2A: F5FC     	BRNN	0B
00/2C:          	
00/2B:          	; FINALLY, WE DO THE ADDRESS SEGMENT
00/2B: 80A0     1:	LOAD	A,[CF_DATA]
00/2C: 1400     	CACHE	A
00/2D: 80A0     	LOAD	A,[CF_DATA]
00/2E: 1600     	WRITE	[B],A
00/2F: 5401     	ADDI	B,1
00/30: F4FA     	BRN	1B
00/32:          	
00/31:          	; AND WE JUMP TO LOADED PROGRAM AND HOPE FOR THE BEST!
00/31: FF4E     	JUMP	0X80
00/33:          
00/32:          	; THIS ROUTINE WILL TAKE 2 PAGES FROM DATA MEMORY
00/32:          	; AND WRITE THEM INTO A PAGE OF INSTRUCTION MEMORY
00/32:          	; RETURNS WITH DATA PAGE ON 0
00/32:          	; A = DESTINATION ISR PAGE
00/32:          	; B = SOURCE DATA PAGE
00/32:          	; C = RETURN ADDRESS
00/32:          	; D = RETURN ISR PAGE
00/32:          	; USES: BYTE 0X7E-0X7F OF PAGE 0
00/32: 0000     PRGM:	BANK	A
00/33: 3000     	LOADI	A,0
00/34: A080     	STORE	[DBANK],A
00/35: A87E     	STORE	[0X7E],C
00/36: AC7F     	STORE	[0X7F],D
00/38:          	
00/37:          	; COPY OVER THE DATA
00/37:          	; CRAZY REGISTER SHIT
00/37: 3C80     	LOADI	D,0X80
00/38: A480     0:	STORE	[DBANK],B
00/39: 3800     	LOADI	C,0
00/3A: 9200     1:	LOADF	A,[C]
00/3B: 1400     	CACHE	A
00/3C: 9201     	LOADF	A,[C+1]
00/3D: C900     	SHIFTR	C
00/3E: 4B00     	ADD	C,D
00/3F: 1A00     	WRITE	[C],A
00/40: 6B00     	SUB	C,D
00/41: 4A00     	SHIFTL	C
00/42: 5802     	ADDI	C,2
00/43: F5F6     	BRNN	1B
00/45:          	
00/44:          	; WE REACHED THE END OF A DATA BANK
00/44:          	; MOVE ON TO THE NEXT?
00/44: 5401     	ADDI	B,1
00/45: 5C40     	ADDI	D,0X40
00/46: F4F1     	BRN	0B
00/48:          	
00/47:          	; NOPE, WE ARE DONE
00/47: 3000     	LOADI	A,0
00/48: A080     	STORE	[DBANK],A
00/49: 887E     	LOAD	C,[0X7E]
00/4A: 8C7F     	LOAD	D,[0X7F]
00/4B: 0C00     	BANK	D
00/4C: FEB3     	JUMPR	C
00/4E:          
00/4D:          	; HALT AT THE END OF THE ROM
00/4D:          .ORG	0x7F
