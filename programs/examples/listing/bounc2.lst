01/80:          ; SDMAY24-14
01/80:          
01/80:          ; DEFINES
01/80:          DBANK	=	0X80
01/80:          UART	=	0X90
01/80:          UART_TH	=	UART+0X00
01/80:          UART_RH	=	UART+0X00
01/80:          UART_LC	=	UART+0X03
01/80:          UART_LS	=	UART+0X05
01/80:          
01/80:          
01/80:          ; NUMBER OF BOUNCERS
01/80:          NUM = 	10
01/80:          
01/80:          .BANK 1
01/80:          .TEXT
01/80:          
01/80:          	; START HERE
01/80: 3C32     START:	LOADI	D,HELLO
01/81: 3883     	LOADI	C,@+2
01/82: FF3B     	JUMP	PRINT
01/84:          
01/83:          	; UPDATE ALL OF THE BOUNCER POSITIONS
01/83: 3C09     UPDATE:	LOADI	D,NUM-1
01/85:          	
01/84:          	; DO X POSITION FIRST
01/84: 9300     0:	LOADF	A,[D+X]
01/85: 9714     	LOADF	B,[D+DX]
01/86: 7401     	SUBI	B,1
01/87: 4100     	ADD	A,B
01/88: F504     	BRNN	1F
01/8A:          
01/89:          	; UNDERFLOW ON X SIDE
01/89: 3402     	LOADI	B,2
01/8A: B714     	STOREF	[D+DX],B
01/8B: 3001     	LOADI	A,1
01/8C: FF06     	JUMP	2F
01/8E:          	
01/8D: 344F     1:	LOADI	B,79
01/8E: D100     	CMP	A,B
01/8F: F103     	BRB	2F
01/91:          	
01/90:          	; OVERFLOW ON X SIDE
01/90: 3400     	LOADI	B,0
01/91: B714     	STOREF	[D+DX],B
01/92: 304D     	LOADI	A,77
01/94:          	
01/93: B300     2:	STOREF	[D+X],A
01/95:          
01/94:          	; NEXT, Y POSITION
01/94: 930A     	LOADF	A,[D+Y]
01/95: 971E     	LOADF	B,[D+DY]
01/96: 7401     	SUBI	B,1
01/97: 4100     	ADD	A,B
01/98: F504     	BRNN	1F
01/9A:          
01/99:          	; UNDERFLOW ON Y SIDE
01/99: 3402     	LOADI	B,2
01/9A: B71E     	STOREF	[D+DY],B
01/9B: 3001     	LOADI	A,1
01/9C: FF06     	JUMP	2F
01/9E:          	
01/9D: 3418     1:	LOADI	B,24
01/9E: D100     	CMP	A,B
01/9F: F103     	BRB	2F
01/A1:          	
01/A0:          	; OVERFLOW ON Y SIDE
01/A0: 3400     	LOADI	B,0
01/A1: B71E     	STOREF	[D+DY],B
01/A2: 3016     	LOADI	A,22
01/A4:          	
01/A3: B30A     2:	STOREF	[D+Y],A
01/A5:          
01/A4:          	; DO THE NEXT ONE
01/A4: 7C01     	SUBI	D,1
01/A5: F0DE     	BRC	0B
01/A7:          	
01/A6:          	; NOW PRINT 'EM OFF
01/A6:          		
01/A6:          	; CLEAR OUT SCREEN
01/A6: 3C29     	LOADI	D,CLRSTR
01/A7: 38A9     	LOADI	C,@+2
01/A8: FF15     	JUMP	PRINT
01/AA:          	
01/A9:          	; DRAW EACH BOUNCER
01/A9: 3C09     	LOADI	D,NUM-1
01/AA: AC28     DRAW:	STORE	[CURR],D
01/AC:          	
01/AB:          	; CONVERT THE X TO DECIMAL
01/AB: 9300     	LOADF	A,[D+X]
01/AC: 5020     	ADDI	A,0X20
01/AD: A02E     	STORE	[ARGX],A
01/AF:          	
01/AE:          	; CONVERT THE Y TO ASCII
01/AE: 930A     	LOADF	A,[D+Y]
01/AF: 5020     	ADDI	A,0X20
01/B0: A02D     	STORE	[ARGY],A
01/B2:          	
01/B1:          	; PRINT IT
01/B1: 3C2B     	LOADI	D,PCHAR
01/B2: 38B4     	LOADI	C,@+2
01/B3: FF0A     	JUMP	PRINT
01/B5:          	
01/B4:          	; DO THE NEXT ONE
01/B4: 8C28     	LOAD	D,[CURR]
01/B5: 7C01     	SUBI	D,1
01/B6: F0F3     	BRC	DRAW
01/B8:          	
01/B7:          	; NOW DELAY A LITTLE BIT AND THEN GO BACK
01/B7: 3000     	LOADI	A,0
01/B8: 3414     	LOADI	B,20
01/B9: 5001     0:	ADDI	A,1
01/BA: F7FE     	BRNZ	0B
01/BB: 7401     	SUBI	B,1
01/BC: F7FC     	BRNZ	0B
01/BE:          	
01/BD: FFC5     	JUMP	UPDATE
01/BF:          	
01/BE:          
01/BE:          	; PRINTS OUT A STRING
01/BE:          	; D = STRING TO PRINT
01/BE:          	; USES: A, B, D
01/BE:          	; GET LINE STATUS REGISTER
01/BE:          	; LOAD STRING CHARACTER
01/BE: 9300     PRINT:	LOADF	A,[D]
01/C0:          
01/BF:          	; MAKE SURE IT ISNT ZERO
01/BF: 5000     	ADDI	A,0
01/C0: F609     	BRZ	1F
01/C2:          	
01/C1:          	; GET LINE STATUS REGISTER
01/C1: 8495     0:	LOAD	B,[UART_LS]
01/C3:          	
01/C2:          	; READ 5TH BIT TO SEE IF WE CAN TRANSMIT YET
01/C2: 4500     	SHIFTL	B
01/C3: 4500     	SHIFTL	B
01/C4: 4500     	SHIFTL	B
01/C5: F1FB     	BRNC	0B
01/C7:          	
01/C6:          	; TRANSMIT BYTE
01/C6: 3403     	LOADI	B,0X03
01/C8:          ;	STORE	[UART_LC],B
01/C7: A090     	STORE	[UART_TH],A
01/C9:          	
01/C8:          	; INCREMENT POINTER AND REDO
01/C8: 5C01     	ADDI	D,1
01/C9: FFF4     	JUMP	PRINT
01/CB:          	
01/CA:          	; RETURN
01/CA: FE35     1:	JUMPR	C
01/CC:          
01/CB:          
01/CB:          .DATA
