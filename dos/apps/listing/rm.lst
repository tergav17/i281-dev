01/80:          ; RM.S
01/80:          ; REMOVE A FILE
01/80:          
01/80:          	; START BY PROCESSING THE ARGUMENTS
01/80: 3000     START:	LOADI	A,0
01/81: A080     	STORE	[DBANK],A
01/83:          	
01/82:          	; SET UP STACK
01/82: 3C5E     	LOADI	D,0X60-2
01/84:          	
01/83:          	; SET FIRST FLAG
01/83: 30FF     	LOADI	A,0XFF
01/84: A000     	STORE	[FIRST],A 
01/86:          	
01/85:          	; SYSCALL RETURN BANK
01/85: 3801     	LOADI	C,1	
01/86: BB01     	STOREF	[D+1],C
01/88:          	
01/87:          	; GO TO ARGUMENT BANK
01/87: 8072     	LOAD	A,[CMDL_B]
01/88: A080     	STORE	[DBANK],A
01/8A:          	
01/89:          	; SET UP POINTER
01/89: 3800     	LOADI	C,0
01/8B:          	
01/8A:          	; SKIP THE INITIAL COMMAND
01/8A: 9200     0:	LOADF	A,[C]
01/8B: 3420     	LOADI	B,0X20
01/8C: D100     	CMP	A,B
01/8D: F902     	BRBE	1F
01/8E: 5801     	ADDI	C,1
01/8F: FFFA     	JUMP	0B
01/91:          
01/90:          	; LOOK FOR THE FIRST ARGUMENT
01/90: 9200     1:	LOADF	A,[C]
01/91: 5000     	ADDI	A,0
01/92: F604     	BRZ	2F
01/93: D100     	CMP	A,B
01/94: F80A     	BRA	RMARG
01/95: 5801     	ADDI	C,1
01/96: FFF9     	JUMP	1B
01/98:          	
01/97:          	; NO ARGUMENT, ERROR
01/97: 3000     2:	LOADI	A,0
01/98: A080     	STORE	[DBANK],A
01/9A:          	
01/99: 3001     	LOADI	A,1
01/9A: A06C     	STORE	[ARG_BNK],A
01/9B: 3000     	LOADI	A,ERROR0
01/9D:          	
01/9C:          	; PRINT ERROR MESSAGE
01/9C: 3404     	LOADI	B,S_PUTS
01/9D: 38BB     	LOADI	C,EXIT
01/9E: FF65     	JUMP	SYSCALL
01/A0:          
01/9F:          	
01/9F:          	; THERE IS AN ARG, TRY AND OPEN IT
01/9F: 3000     RMARG:	LOADI	A,0
01/A0: A080     	STORE	[DBANK],A
01/A2:          	
01/A1:          	; C = FILE STRING START
01/A1: A801     	STORE	[POINTER],C
01/A3:          	
01/A2:          	; SET ARGUMENTS
01/A2: 8072     0:	LOAD	A,[CMDL_B]
01/A3: A06C     	STORE	[ARG_BNK],A
01/A4: 8001     	LOAD	A,[POINTER]
01/A6:          	
01/A5:          	; OPEN FILE
01/A5: 3406     	LOADI	B,S_OPEN
01/A6: 38A8     	LOADI	C,@+2
01/A7: FF5C     	JUMP	SYSCALL
01/A9:          	
01/A8:          	; CHECK FOR ERRORS
01/A8: 5000     	ADDI	A,0
01/A9: F705     	BRNZ	1F
01/AB:          	
01/AA:          	; REMOVE FILE
01/AA: 340C     	LOADI	B,S_DELET
01/AB: 38AD     	LOADI	C,@+2
01/AC: FF57     	JUMP	SYSCALL
01/AE:          
01/AD:          	; CHECK FOR ERRORS
01/AD: 5000     	ADDI	A,0
01/AE: F609     	BRZ	2F
01/B0:          	
01/AF:          	; IS THIS THE FIRST?
01/AF: 8000     1:	LOAD	A,[FIRST]
01/B0: 5000     	ADDI	A,0
01/B1: F609     	BRZ	EXIT
01/B3:          	
01/B2:          	; ERROR MESSAGE ARGS
01/B2: 3001     	LOADI	A,1
01/B3: A06C     	STORE	[ARG_BNK],A
01/B4: 300E     	LOADI	A,ERROR1
01/B6:          	
01/B5:          	; PRINT ERROR MESSAGE
01/B5: 3404     	LOADI	B,S_PUTS
01/B6: 38BB     	LOADI	C,EXIT
01/B7: FF4C     	JUMP	SYSCALL
01/B9:          	
01/B8:          	; RESET FIRST FLAG
01/B8: 3000     2:	LOADI	A,0
01/B9: A000     	STORE	[FIRST],A
01/BA: FFE7     	JUMP	0B
01/BC:          
01/BB:          	; EXIT PROGRAM
01/BB: 3400     EXIT:	LOADI	B,0
01/BC: FF48     	JUMP	SYSJUMP
